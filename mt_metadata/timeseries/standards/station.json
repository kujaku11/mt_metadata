{
    "channel_layout": {
        "type": "string",
        "required": false,
        "style": "controlled vocabulary",
        "units": null,
        "description": "how the station was laid out",
        "options": [
            "L",
            "X",
            "other"
        ],
        "alias": [],
        "example": "x"
    },
    "channels_recorded": {
        "type": "string",
        "required": true,
        "style": "name list",
        "units": null,
        "description": "list of components recorded by the station. Should be a summary of all channels recorded dropped channels will be recorded in Run metadata.",
        "options": [
            "Ex",
            "Ey",
            "Hx",
            "Hy",
            "Hz",
            "T",
            "Battery",
            "other"
        ],
        "alias": [],
        "example": "\"[ Ex, Ey, Hx, Hy, Hz, T]\""
    },
    "comments": {
        "type": "string",
        "required": false,
        "style": "free form",
        "units": null,
        "description": "any comments on the station",
        "options": [],
        "alias": [],
        "example": "5 runs"
    },
    "data_type": {
        "type": "string",
        "required": true,
        "style": "controlled vocabulary",
        "units": null,
        "description": "type of data recorded. If multiple types input as a comma separated list",
        "options": [
            "RMT",
            "AMT",
            "BBMT",
            "LPMT",
            "ULPMT",
            "other"
        ],
        "alias": [],
        "example": "BBMT"
    },
    "geographic_name": {
        "type": "string",
        "required": true,
        "style": "free form",
        "units": null,
        "description": "closest geographic name to the station",
        "options": [],
        "alias": [],
        "example": "\"Whitehorse, YK\""
    },
    "id": {
        "type": "string",
        "required": true,
        "style": "alpha numeric",
        "units": null,
        "description": "Station ID name.  This should be an alpha numeric name that is typically 5-6 characters long.  Commonly the project name in 2 or 3 letters and the station number.",
        "options": [],
        "alias": [],
        "example": "MT001"
    },
    "run_list": {
        "type": "string",
        "required": true,
        "style": "name list",
        "units": null,
        "description": "list of runs recorded by the station. Should be a summary of all runs recorded",
        "options": [
            "a",
            "b",
            "c",
            "other"
        ],
        "alias": [],
        "example": "\"[ mt001a, mt001b, mt001c ]\""
    }
}